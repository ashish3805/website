{
  "script": "index.js",
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "bower_components",
    "public"
  ],
  "verbose": false,
  "execMap": {
    "js": "node"
  },
  "watch": [
    "index.js",
    "team.json",
    "views/**/*.*",
    "server/**/*.*"
  ],
  "env": {
    "NODE_ENV": "development",
    "MONGO_URL": "mongodb://username:password@host:port/dbname",
    "YAR_PASSWORD": "some-random-string-min-length-32-char",
    "PORT": 8000
  },
  "ext": "js, hbs"
}
