<div id="reserve" class="section">
  <h1 class="text-center">Pre-register Your Interplanetary Address</h1>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
      <form method="post" action="/reserve" id="reservation_form">
        <div class="form-group">
          <label for="cluster">Cluster</label>
          <select class="form-control" name="cluster" id="cluster" required>
            {{# each clusters }}
              <option value="{{ this }}">{{ this }}</option>
            {{/ each }}
          </select>
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" placeholder="Address" name="address" required>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" name="subscribe"> Subscribe to mailing list for updates</label>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Reserve Now</button>
      </form>
    </div>
  </div>
</div>
